.z-depth-0
    box-shadow none !important
.z-depth-1
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.1), 0 2px 10px 0 rgba(0, 0, 0, 0.05)
.z-depth-1-half
    box-shadow 0 5px 11px 0 rgba(0, 0, 0, 0.05), 0 4px 15px 0 rgba(0, 0, 0, 0.05)
.z-depth-2
    box-shadow 0 8px 17px 0 rgba(0, 0, 0, 0.05), 0 6px 20px 0 rgba(0, 0, 0, 0.05)
.z-depth-3
    box-shadow 0 12px 15px 0 rgba(0, 0, 0, 0.05), 0 17px 50px 0 rgba(0, 0, 0, 0.05)
.z-depth-4
    box-shadow 0 16px 28px 0 rgba(0, 0, 0, 0.05), 0 25px 55px 0 rgba(0, 0, 0, 0.05)
.z-depth-5
    box-shadow 0 27px 24px 0 rgba(0, 0, 0, 0.05), 0 40px 77px 0 rgba(0, 0, 0, 0.05)
.hoverable
    transition box-shadow .25s
    box-shadow 0
    &:hover
        transition box-shadow .25s
        box-shadow 0 8px 17px 0 rgba(0, 0, 0, 0.15), 0 6px 20px 0 rgba(0, 0, 0, 0.15)
